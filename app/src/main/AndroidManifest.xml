<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.sharif.courseworkapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CourseworkApp">
        <activity
            android:name=".ui.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.RegisterActivity" />
        <activity android:name=".ui.panel.ProfessorPanelActivity" />
        <activity android:name=".ui.panel.StudentPanelActivity" />
        <activity
            android:name=".ui.course.ProfessorCoursePage"
            android:theme="@style/Theme.CourseworkApp.NoActionBar" />
        <activity
            android:name=".ui.course.StudentCoursePage"
            android:theme="@style/Theme.CourseworkApp.NoActionBar" />
    </application>

</manifest>